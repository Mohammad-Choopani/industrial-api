{
  "name": "industrial-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:db": "docker compose up -d",
    "dev:web": "npm --prefix web run dev",
    "dev:all": "npm run dev:db && concurrently -n API,WEB -c magenta,green \"npm:dev\" \"npm:dev:web\"",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "prisma:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:seed": "tsx prisma/seed.ts",
    "start:dev": "powershell -ExecutionPolicy Bypass -File .\\\\start-dev.ps1",
    "stop:dev": "powershell -ExecutionPolicy Bypass -File .\\\\stop-dev.ps1"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@types/socket.io": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "socket.io": "^4.8.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "prisma": "^6.16.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  }
}
